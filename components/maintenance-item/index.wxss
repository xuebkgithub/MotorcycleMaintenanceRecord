/* 维护记录项组件样式 */

.maintenance-item {
  padding: 24rpx 32rpx;
  background: var(--td-bg-color-container);
  border-bottom: 1rpx solid var(--td-border-level-1-color);
}

.maintenance-item__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.maintenance-item__type {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--td-text-color-primary);
}

.maintenance-item__cost {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--td-error-color-6);
}

.maintenance-item__meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--td-text-color-secondary);
  margin-bottom: 12rpx;
}

.meta-divider {
  margin: 0 8rpx;
}

.maintenance-item__items {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.item-tag {
  padding: 4rpx 12rpx;
  background: var(--td-bg-color-secondarycontainer);
  color: var(--td-text-color-secondary);
  font-size: 20rpx;
  border-radius: 8rpx;
}
