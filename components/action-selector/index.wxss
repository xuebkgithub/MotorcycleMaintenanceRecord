/* 操作选择器样式 */

.selector-content {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
  padding: 32rpx 0;
}

.selector-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  flex: 1;
  padding: 40rpx 24rpx;
  background-color: var(--td-bg-color-container);
  border-radius: 16rpx;
  border: 4rpx solid var(--td-component-border);
  cursor: pointer;
  transition: all 0.3s ease;
}

.selector-item.selected {
  border-color: var(--td-brand-color);
  background-color: var(--td-brand-color-light);
}

.selector-label {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--td-text-color-primary);
  text-align: center;
}

.selector-item.selected .selector-label {
  color: var(--td-brand-color);
}

.selector-check {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .selector-item {
    background-color: var(--td-bg-color-container);
    border-color: var(--td-component-border);
  }

  .selector-item.selected {
    background-color: var(--td-brand-color-light);
    border-color: var(--td-brand-color);
  }
}
