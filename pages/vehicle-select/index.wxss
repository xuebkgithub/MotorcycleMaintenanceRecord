/* 车辆选择页面样式 */

.vehicle-select-page {
  min-height: 100vh;
  background-color: var(--td-bg-color-page);
}

.vehicle-list {
  padding: 32rpx 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 64rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--td-text-color-primary);
  margin-top: 32rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: var(--td-text-color-placeholder);
  margin-top: 16rpx;
  text-align: center;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .vehicle-select-page {
    background-color: var(--td-bg-color-page);
  }
}
