.csv-preview-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 统计信息卡片 */
.stats-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 36rpx;
  font-weight: bold;
}

.stats-vehicle {
  font-size: 28rpx;
  opacity: 0.9;
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 0.2);
  min-width: 140rpx;
}

.stat-item.valid {
  background-color: rgba(76, 175, 80, 0.3);
}

.stat-item.error {
  background-color: rgba(244, 67, 54, 0.3);
}

.stat-item.duplicate {
  background-color: rgba(255, 152, 0, 0.3);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 数据列表 */
.data-list {
  padding: 0 20rpx;
}

.data-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.data-item.valid {
  border-left: 6rpx solid #4caf50;
}

.data-item.error {
  border-left: 6rpx solid #fa5151;
  background-color: #fff5f5;
}

.data-item.duplicate {
  border-left: 6rpx solid #ff9800;
  background-color: #fffbf0;
}

/* 行号和状态 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.row-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.data-item.valid .status-badge {
  background-color: #e8f5e9;
  color: #4caf50;
}

.data-item.error .status-badge {
  background-color: #ffebee;
  color: #fa5151;
}

.data-item.duplicate .status-badge {
  background-color: #fff3e0;
  color: #ff9800;
}

/* 数据内容 */
.item-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.data-row {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.data-label {
  color: #666;
  width: 180rpx;
  flex-shrink: 0;
}

.data-value {
  color: #333;
  font-weight: 500;
}

/* 油品类型选择 */
.fuel-type-row {
  margin-top: 8rpx;
  padding-top: 12rpx;
  border-top: 1rpx dashed #e0e0e0;
}

.fuel-type-selector {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.fuel-type-value {
  flex: 1;
  color: #0052d9;
  font-weight: 500;
}

/* 错误提示 */
.error-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  padding: 12rpx;
  background-color: #ffebee;
  border-radius: 8rpx;
}

.error-text {
  flex: 1;
  font-size: 24rpx;
  color: #fa5151;
  line-height: 1.5;
}

/* 重复提示 */
.duplicate-tip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  padding: 12rpx;
  background-color: #fff3e0;
  border-radius: 8rpx;
}

.duplicate-text {
  flex: 1;
  font-size: 24rpx;
  color: #ff9800;
  line-height: 1.5;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.action-bar t-button {
  flex: 1;
}
