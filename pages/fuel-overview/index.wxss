/* 油耗概览页面样式 */

/* 页面容器 */
.fuel-overview-page {
  min-height: 100vh;
  background-color: var(--td-bg-color-page, #F5F5F5);
}

/* ========== 顶部操作栏 ========== */
.top-actions {
  margin-top: 200rpx;
  padding: 24rpx 32rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #E5E5E5;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  background-color: #F8F9FA;
  border-radius: 12rpx;
  color: #0052D9;
  font-size: 28rpx;
  font-weight: 500;
  transition: background-color 0.2s;
}

.action-btn:active {
  background-color: #E8EBF0;
}

/* ========== 统计宫格 ========== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 32rpx;
}

.stat-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #F3F3F3;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1.2;
}

.stat-unit {
  font-size: 24rpx;
  color: #909399;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #606266;
  margin-top: 8rpx;
  text-align: center;
}

/* ========== 算法说明区域 ========== */
.help-section {
  margin: 0 32rpx 24rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.help-header {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  background-color: #F8F8F8;
}

.help-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
}

.help-icon {
  font-size: 32rpx;
}

.help-content {
  padding: 32rpx;
  background-color: #FFFFFF;
}

.help-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 24rpx;
  line-height: 1.8;
}

.help-item:last-child {
  margin-bottom: 0;
}

.help-bullet {
  font-size: 28rpx;
  color: #0052D9;
  flex-shrink: 0;
}

.help-text {
  font-size: 28rpx;
  color: #606266;
  flex: 1;
}

/* ========== 图表预留区域 ========== */
.chart-section {
  margin: 0 32rpx 24rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.chart-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 32rpx 32rpx 24rpx;
}

.chart-icon {
  font-size: 36rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
}

.chart-placeholder {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F8F8F8;
  border: 2rpx dashed #DCDFE6;
  margin: 0 32rpx 32rpx;
  border-radius: 8rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #909399;
}
