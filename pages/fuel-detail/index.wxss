/* 油耗详情页样式 */

.fuel-detail-page {
  min-height: 100vh;
  background-color: var(--td-bg-color-page);
  padding-bottom: 32rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: var(--td-text-color-placeholder);
}

/* 未找到状态 */
.not-found-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.not-found-text {
  font-size: 28rpx;
  color: var(--td-text-color-placeholder);
}

/* 详情内容 */
.detail-content {
  padding-top: 0;
}

/* 头部信息 */
.detail-header {
  background: linear-gradient(135deg, var(--td-warning-color-6), var(--td-warning-color-7));
  padding: 198rpx 32rpx 48rpx 32rpx;  /* 150rpx间距 + 48rpx原始上边距 */
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-volume {
  display: flex;
  align-items: baseline;
  color: #ffffff;
}

.volume-number {
  font-size: 56rpx;
  font-weight: 700;
}

.volume-unit {
  font-size: 32rpx;
  font-weight: 400;
  margin-left: 8rpx;
}

.header-cost {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 底部按钮栏 */
.detail-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx 32rpx 48rpx;
  margin-top: 16rpx;
}

.detail-footer t-button {
  flex: 1;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .fuel-detail-page {
    background-color: var(--td-bg-color-page);
  }

  .detail-header {
    background: linear-gradient(135deg, var(--td-warning-color-5), var(--td-warning-color-6));
  }
}
