/* 我的页面样式 */

.profile-page {
  min-height: 100vh;
  background-color: var(--td-bg-color-page);
}

/* 用户信息区域 */
.user-info {
  background: linear-gradient(135deg, var(--td-primary-color-7), var(--td-primary-color-8));
  padding: 120rpx 32rpx 80rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.vehicle-info-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 功能菜单 */
.menu-section {
  margin: 32rpx 24rpx;
  background: var(--td-bg-color-container);
  border-radius: 16rpx;
  overflow: hidden;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .profile-page {
    background-color: var(--td-bg-color-page);
  }

  .user-info {
    background: linear-gradient(135deg, var(--td-primary-color-6), var(--td-primary-color-7));
  }

  .menu-section {
    background: var(--td-bg-color-container);
  }
}
